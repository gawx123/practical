<?php
//$cn=mysqli_connect("localhost","root","root","mscit5");
require_once("dbconnect.php");
$rno="";
$sname="";
$sem="";
$course="";
//Update
if (isset($_POST['s1']))
{
$rno=$_POST['txtrno'];
$name=$_POST['t1'];
$course=$_POST['r1'];
$sem=$_POST['cmbsem'];
$sql="update student set sname='$name',sem=$sem,course='$course' where rno=$rno";
$res=mysqli_query($cn,$sql);
//echo "Result $res";
//echo $sql;
header("Location:db_student_show.php");
}

//Searching a particular student
if (isset($_REQUEST['rollno']))
{
	$rno=$_REQUEST['rollno'];
	$searchsql="select * from student where rno=$rno";
	$res1=mysqli_query($cn,$searchsql);
	while ($row=mysqli_fetch_array($res1)) {
		$rno=$row['rno'];
		$sname=$row['sname'];
		$sem=$row['sem'];
		$course=$row['course'];
	}
}
?>
<?php 
include("header.php");
?>

<div class="row">
            <div class="col-lg-8">
              <div class="card">
                <div class="card-body">
